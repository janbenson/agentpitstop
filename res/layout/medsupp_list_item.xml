<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:background="@color/apslight_green"
    android:orientation="vertical" >
 
    <!-- Company -->

    <TextView
        android:id="@+id/company"
        android:layout_width="125dp"
        android:layout_height="wrap_content"
        android:paddingBottom="4sp"
        android:paddingLeft="8sp"
        android:paddingTop="8sp"
        android:textColor="@color/aps_gray"
        android:textSize="20sp"
        android:textStyle="bold" />
    
    <!-- Rate  -->
     
    <!-- Payoption-->

    <TextView
        android:id="@+id/rate_wf"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_alignBottom="@+id/company"
        android:layout_alignTop="@+id/company"
        android:layout_toRightOf="@+id/plan"
        android:paddingBottom="6sp"
        android:paddingLeft="8sp"
        android:textColor="@color/aps_gray"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/plan"
        android:layout_width="30dp"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/company"
        android:layout_alignTop="@+id/company"
        android:layout_toRightOf="@+id/company"
        android:paddingBottom="4sp"
        android:paddingLeft="8sp"
        android:paddingTop="8sp"
        android:textColor="@color/black"
        android:textSize="20sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/payoption"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/ratedate"
        android:layout_alignTop="@+id/ratedate"
        android:layout_toRightOf="@+id/ratedate"
        android:textColor="@color/black" />

    <TextView
        android:id="@+id/ratedate"
        android:layout_width="125dp"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/company"
        android:textColor="@color/black"
        android:textStyle="bold" />

    

</RelativeLayout>